<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.klaukon.androidsdkintegration">

    <permission
        android:name="nl.klaukon.androidsdkintegration.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>
    <uses-permission
        android:name="nl.klaukon.androidsdkintegration.permission.C2D_MESSAGE"/>


    <application
        android:name=".DeltaDnaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="nl.klaukon.androidsdkintegration"/>
            </intent-filter>
        </receiver>
        <service
            android:name="com.deltadna.android.sdk.notifications.NotificationListenerService"
            android:exported="false">

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="ddna_sender_id"
            android:resource="@string/sender_id"/>

    </application>


</manifest>
